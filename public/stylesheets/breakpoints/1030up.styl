.header,
.content-title,
.content-title.one-line,
.content-body
  padding-left 100px
  padding-right 100px 
  
.header
  .nav-list
    .nav-item
      .nav-link:hover
        color dark-green 
 
.content-title 
  .content-title-first
    font-size 92px
  .content-title-second
    text-indent 50%
    width 100%
    .content-title-and
      font-size 58px
    .content-title-second-text
      font-size 78px
    
.project-list
  flex-direction row
  flex-wrap wrap
  
  .project
    flex-basis 40%
    padding 0 10px
    
    &:first-of-type
      flex-basis 100%
    
    .project-title
      font-size 22px
      vertical-align initial
      
    .project-btn
      vertical-align text-top
      
    .project-desc
      padding 12px 16px
      font-size 14px
    
    .tag
      font-size 12px

.hire-me
  width 50%
  margin 40px auto 20px
      
.skills-list
  flex-direction row
  flex-wrap wrap 
  
  .skill
    flex-basis 30%
    margin 10px
    

.contact-form
  width 60%
  margin 0 auto
  
.updatebrowser
  max-width 450px
  padding 15px
  